#include <iostream>
using namespace std;
 
int main()
{
   int x = 10;
   int y = 0;
 
   try {
      if( y == 0 )
      {
         throw "Division by zero condition!";
      }
      else
      {
         cout << (x/y);
      }
   }
   catch(const char* msg)
   {
      cerr << msg << endl;
   }
 
   return 0;
}
